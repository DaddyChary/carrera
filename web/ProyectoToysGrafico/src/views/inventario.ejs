<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('partials/head.ejs')%>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet">
    </head>
    <body>
        <%- include('partials/navbar.ejs')%>

        <div class="container mt-5">
            <div class="row">
                <div class="col-12">
                    <h2>Items</h2>
                    <div class="mb-3">
                        <input type="text" class="form-control" id="search"
                            placeholder="Buscar...">
                    </div>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">ID Juguete</th>
                                <th scope="col">Cantidad</th>
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% inventario.forEach(item => { %>
                            <tr>
                                <td><%= item.id %></td>
                                <td><%= item.id_juguete_fk %></td>
                                <td><%= item.cantidad %></td>
                                <td>
                                    <button type="button"
                                        class="btn btn-warning btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#editModal<%= item.id %>">Editar</button>
                                    <form method="POST"
                                        action="/eliminar/<%= item.id %>"
                                        class="d-inline">
                                        <button type="submit"
                                            class="btn btn-danger btn-sm">Eliminar</button>
                                    </form>
                                </td>
                            </tr>

                            <!-- Modal para Editar Item -->
                            <div class="modal fade" id="editModal<%= item.id %>"
                                tabindex="-1"
                                aria-labelledby="editModalLabel<%= item.id %>"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title"
                                                id="editModalLabel<%= item.id %>">Editar
                                                Item</h5>
                                            <button type="button"
                                                class="btn-close"
                                                data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form method="POST"
                                                action="/editar/<%= item.id %>">
                                                <div class="mb-3">
                                                    <label
                                                        for="id_edit_<%= item.id %>"
                                                        class="form-label">ID</label>
                                                    <input type="text"
                                                        class="form-control"
                                                        id="id_edit_<%= item.id %>"
                                                        name="id"
                                                        value="<%= item.id %>">
                                                </div>
                                                <div class="mb-3">
                                                    <label
                                                        for="id_juguete_fk_edit_<%= item.id %>"
                                                        class="form-label">ID
                                                        Juguete</label>
                                                    <input type="text"
                                                        class="form-control"
                                                        id="id_juguete_fk_edit_<%= item.id %>"
                                                        name="id_juguete_fk"
                                                        value="<%= item.id_juguete_fk %>">
                                                </div>
                                                <div class="mb-3">
                                                    <label
                                                        for="cantidad_edit_<%= item.id %>"
                                                        class="form-label">Cantidad</label>
                                                    <input type="text"
                                                        class="form-control"
                                                        id="cantidad_edit_<%= item.id %>"
                                                        name="cantidad"
                                                        value="<%= item.cantidad %>">
                                                </div>
                                                <button type="submit"
                                                    class="btn btn-primary">Guardar
                                                    Cambios</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                        </tbody>
                    </table>
                    <!-- BotÃ³n para agregar nuevo Item -->
                    <button type="button" class="btn btn-primary"
                        data-bs-toggle="modal"
                        data-bs-target="#addModal">Agregar Item</button>
                </div>
            </div>
        </div>

        <!-- Modal para Agregar Item -->
        <div class="modal fade" id="addModal" tabindex="-1"
            aria-labelledby="addModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addModalLabel">Agregar
                            Item</h5>
                        <button type="button" class="btn-close"
                            data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="mb-3">
                                <label for="id_juguete_fk_add"
                                    class="form-label">ID Juguete</label>
                                <input type="text" class="form-control"
                                    id="id_juguete_fk_add" name="id_juguete_fk"
                                    placeholder="Ingrese el ID del juguete">
                            </div>
                            <div class="mb-3">
                                <label for="cantidad_add"
                                    class="form-label">Cantidad</label>
                                <input type="text" class="form-control"
                                    id="cantidad_add" name="cantidad"
                                    placeholder="Ingrese la cantidad">
                            </div>
                            <button type="submit"
                                class="btn btn-primary">Agregar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <%- include('partials/footer.ejs')%>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
